@typeparam T

@code {

    [CascadingParameter]
    public FlareTable<T> FlareTable { get; set; }

    [Parameter]
    public T Value { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }

}

<tr class="@FlareTable.RowClasses(Value)" @onclick="@(() => FlareTable.RowClick(Value))">
    @ChildContent
</tr>
