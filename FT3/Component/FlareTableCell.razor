@typeparam T

@code {

    [CascadingParameter]
    public FlareTable<T> FlareTable { get; set; }

    [Parameter]
    public string ID { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

}

@* <TriggerWrapper Trigger="@FlareTable.OnColumnToggle"> *@
    @if (FlareTable.ColumnShown(ID))
    {
        <td class="@FlareTable.CellClasses(ID)">@ChildContent</td>
    }
    else
    {
        <td class="@FlareTable.CellClasses(ID) FlareTableCell--Hidden"></td>
    }
@* </TriggerWrapper> *@