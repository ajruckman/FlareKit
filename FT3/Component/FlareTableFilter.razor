@using System.Timers
@using Microsoft.AspNetCore.Components.Web
@using Superset.Common

@typeparam T

@code {

    [CascadingParameter]
    public FlareTable<T> FlareTable { get; set; }

    [Parameter]
    public string ID { get; set; }

    private readonly object _debouncerLock = new object();
    private Timer _debouncer;
    private string _filter;

    protected override void OnParametersSet()
    {
        _filter = FlareTable.GetColumnFilter(ID);
        FlareTable.UpdateFilterValues.OnUpdate += () => _filter = "";
    }

    private async void SetFilter(ChangeEventArgs args)
    {
        lock (_debouncerLock)
        {
            _filter = args.Value.ToString();
            Console.WriteLine("BeginDebounce => " + _filter);
            if (_debouncer == null)
            {
                _debouncer = new Timer(250) {AutoReset = false};
                _debouncer.Elapsed += async (_, __) =>
                {
                    await FlareTable.SetColumnFilter(ID, _filter);
                    Console.WriteLine("Debounced => " + _filter);
                };
                _debouncer.Start();
            }
            else
            {
                _debouncer.Enabled = false;
                _debouncer.Enabled = true;
            }
        }
    }

}

<TriggerWrapper Trigger="@FlareTable.UpdateTableHead">
    @if (FlareTable.ColumnShown(ID))
    {
        <th class="FlareTableFilter_Cell">
            <span class="FlareTableFilter_CellControlContainer">
                @{ string key = "FT_F_" + ID; }
                <TriggerWrapper Trigger="@FlareTable.UpdateFilterValues">
                    <input class="FlareTableFilter_Input" @key="@key" type="text" value="@_filter" @oninput="SetFilter"/>
                </TriggerWrapper>
                <div class="FlareTableFilter_SortButton @FlareTable.ColumnSortButtonClass(ID)" @onclick="@(_ => FlareTable.NextColumnSort(ID))">@FlareTable.ColumnSortButtonContent(ID)</div>
            </span>
        </th>
    }
    else
    {
        <th class="FlareTableFilter_Cell FlareTableFilter_Cell--Hidden"></th>
    }
</TriggerWrapper>