@using Microsoft.AspNetCore.Components.Web
@using Superset.Web.State

@typeparam T

@code {

    [CascadingParameter]
    public FlareTable<T> FlareTable { get; set; }

    private async Task UpdatePageSize(ChangeEventArgs args)
    {
        await FlareTable.UpdatePageSize(int.Parse(args.Value.ToString()));
    }

}

<div class="FlareTablePaginationSizes">
    <TriggerWrapper Trigger="@FlareTable.UpdateTableHead">
        <select class="FlareTablePaginationSizeSelector" @onchange="@UpdatePageSize">
            @foreach (int size in FlareTable<T>.PageSizes)
            {
                <option selected="@(size == FlareTable.PageSize)" value="@size">@size</option>
            }
        </select>
    </TriggerWrapper>
</div>